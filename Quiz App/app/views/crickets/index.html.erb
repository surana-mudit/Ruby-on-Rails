<p id="notice"><%= notice %></p>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<h1 align="center">Cricket-Quiz</h1>
<br/><br/>

<% if @rec.state >= 1 && @rec.state < Cricket.count()  %>
	<p align="center"><%= link_to "Continue Quiz", "/crickets/"+(@rec.state+1).to_s, class: "btn btn-success" %><br/><br/></p>
	<p align="center"><%= link_to "Start Over", crickets_1_path, data: { confirm: "Your previous score will not be considered if you start again. Do you wish to continue?" }, class: "btn btn-info" %></p><br/><br/>
<% elsif @rec.state >= Cricket.count() %>
	<p align="center"><%= link_to "Start Quiz", crickets_1_path, data: { confirm: "Your score will be updated to 0, if you play again. Do you wish to continue? (Rankings will also be affected)" }, class: "btn btn-success" %></p><br/><br/>
<% else %>
	<p align="center"><%= link_to "Start Quiz", crickets_1_path, class: "btn btn-success" %></p><br/><br/>
<% end %>

<table class="table table-hover">
	<tr>
		<th style="text-align: center;">USER EMAIL</th>
		<th style="text-align: left;">SCORE</th>
	</tr>
	<% @players.each do |player| %>
	<tr>
		<td style="text-align: center;"><%= player.user_email %></td>
		<td style="text-align: left;"><%= player.score %></td>
	</tr>
	<% end %>
</table>

<p align="center"><%= link_to "Back", quiz_index_path, class: "btn btn-info" %></p>
