<!DOCTYPE html>
<html>
  <head>
    <title>GAME</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>  
  </head>

  <body>
  <br/>
  <h1 style="text-align: center; color: green">WELCOME TO THE QUIZ!!</h1><br/><br/>
  <% if current_user %> 
    <% if current_user.admin %>
      <p align="center"><%= link_to "Admin Page", "/admin", class: "btn btn-info" %></p>
    <% end %>
    <p align="center"><%= link_to "Quiz Page", quiz_index_path, class: "btn btn-success" %><br/></p>  
    <p align="center"><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger" %></p>
  <% else %>
  	<%= link_to "Login", new_user_session_path %>
  <% end %>
  </body>
</html>
